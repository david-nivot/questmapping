<!DOCTYPE html>
<html>
<head>
    {{> head }}
</head>
<body>
    {{> header }}
    <div class="content">
        <h2>{{title}}</h2>
        <br/>
        {{#errors}}
        <div class="container list-block">
            <div class="row">
                <div class="col-12">
                    Crée le {{createdAt}} par <span style="color:{{usercolor}}">{{username}}</span>
                </div>
            </div>
            <div class="row">
                <div class="col-12">à <span class="font-weight-bold">{{poi}}</span></div>
            </div>
            <div class="row">
                <div class="col-12">
                    Corrigé le {{updatedAt}} par <span style="color:{{editorcolor}}">{{editorname}}</span>
                </div>
            </div>
            {{#canDelete}}
            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    <a href="delete/{{id}}" role="button" class="btn btn-danger btn-sm">Supprimer</a>
                </div>
            </div>
            {{/canDelete}}
        </div>
        {{/errors}}
        <div class="d-flex justify-content-center my-4">
            <a href="{{target}}" class="btn btn-secondary btn-lg btn-block">
                Retour à la carte
            </a>
        </div>

    </div>
    {{> footer }}
</body>
</html>
