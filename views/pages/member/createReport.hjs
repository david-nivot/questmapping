<!DOCTYPE html>
<html>
<head>
    {{> head }}
</head>
<body>
    {{> header }}
    <div class="content">
        <div class="container">
            {{#quests}}
            <a class="row btn-quest align-middle {{#isGroup}}btn-quest-group{{/isGroup}}" href="{{uri}}"
            {{#color}}style="background:linear-gradient(135deg, #f7fcf6 65%,{{color}} 100%)"{{/color}} >
                <div class="col-10">
                    {{#isGroup}}
                    {{name}}
                    {{/isGroup}}
                    {{^isGroup}}
                    {{goal}} ({{reward}})
                    {{/isGroup}}
                </div>
                <div class="col-2 img-quest">
                    <img src="{{icon}}">
                </div>
            </a>
            {{/quests}}
        </div>
    </div>
    {{> footer }}
</body>
</html>
